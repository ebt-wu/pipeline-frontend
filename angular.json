{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ui": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/ui",
      "sourceRoot": "projects/ui/src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "en-US",
        "locales": {
          "en": "projects/ui/src/locale/messages.xlf",
          "de": "projects/ui/src/locale/messages.de.xlf"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "localize": ["en-US", "de"],
            "outputPath": "dist/ui",
            "index": "projects/ui/src/index.html",
            "main": "projects/ui/src/main.ts",
            "polyfills": "projects/ui/src/polyfills.ts",
            "tsConfig": "projects/ui/tsconfig.app.json",
            "aot": true,
            "assets": [
              "projects/ui/src/favicon.ico",
              "projects/ui/src/assets",
              {
                "glob": "**/css_variables.css",
                "input": "./node_modules/@sap-theming/theming-base-content/content/Base/baseLib/",
                "output": "./assets/theming-base/"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/fundamental-styles/dist/theming/",
                "output": "./assets/fundamental-styles-theming/"
              }
            ],
            "styles": [
              "projects/ui/src/styles.css",
              "node_modules/fundamental-styles/dist/icon.css",
              {
                "input": "projects/ui/src/theming/sap_fiori_3_fonts.css",
                "inject": false,
                "bundleName": "sap_fiori_3_fonts"
              },
              {
                "input": "projects/ui/src/theming/sap_horizon_fonts.css",
                "inject": false,
                "bundleName": "sap_horizon_fonts"
              }
            ],
            "scripts": [],
            "allowedCommonJsDependencies": ["graphql-tag", "hammerjs", "zen-observable"]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/ui/src/environments/environment.ts",
                  "with": "projects/ui/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "local": {
              "fileReplacements": [
                {
                  "replace": "projects/ui/src/environments/environment.ts",
                  "with": "projects/ui/src/environments/environment.local.ts"
                }
              ],
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "localize": false
            },
            "development": {
              "fileReplacements": [
                {
                  "replace": "projects/ui/src/environments/environment.ts",
                  "with": "projects/ui/src/environments/environment.development.ts"
                }
              ],
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "localize": false
            },
            "de": {
              "localize": ["de"]
            },
            "en": {
              "localize": ["en-US"]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ui:build"
          },
          "defaultConfiguration": "development",
          "configurations": {
            "production": {
              "browserTarget": "ui:production"
            },
            "development": {
              "browserTarget": "ui:build:development"
            },
            "local": {
              "browserTarget": "ui:build:local"
            },
            "e2e-test": {
              "browserTarget": "ui:build:e2e-test"
            },
            "de": {
              "browserTarget": "ui:build:de"
            },
            "en": {
              "browserTarget": "ui:build:en"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "pipeline-ui:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/ui/src/**/*.ts", "projects/ui/src/**/*.html"]
          }
        }
      }
    },
    "wc": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "sass"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/webcomponent",
      "sourceRoot": "projects/webcomponent/src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "en-US",
        "locales": {
          "en": "projects/ui/src/locale/messages.xlf",
          "de": "projects/ui/src/locale/messages.de.xlf"
        }
      },
      "architect": {
        "build": {
          "builder": "ngx-build-plus:browser",
          "options": {
            "localize": ["en-US", "de"],
            "outputPath": "dist/wc",
            "index": "",
            "main": "projects/webcomponent/src/main.ts",
            "polyfills": "projects/webcomponent/src/polyfills.ts",
            "tsConfig": "projects/webcomponent/tsconfig.app.json",
            "inlineStyleLanguage": "sass",
            "assets": ["projects/webcomponent/src/assets"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "5mb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/webcomponent/src/environments/environment.ts",
                  "with": "projects/webcomponent/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "localize": false
            },
            "de": {
              "localize": ["de"]
            },
            "en": {
              "localize": ["en-US"]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "wc:build:production"
            },
            "development": {
              "browserTarget": "wc:build:development"
            },
            "de": {
              "browserTarget": "wc:build:de"
            },
            "en": {
              "browserTarget": "wc:build:en"
            }
          },
          "defaultConfiguration": "development"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/webcomponent/**/*.ts", "projects/webcomponent/**/*.html"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "packageManager": "npm",
    "schematicCollections": ["@angular-eslint/schematics"]
  }
}

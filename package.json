{
  "name": "pipeline-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=3"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "start": "ng serve",
    "build": "ng build --configuration production --localize --output-path=dist",
    "login-gcloud": "gcloud auth login && echo 'You need to run:\n\n\texport GCP_REGISTRY_REFERENCE_TOKEN=$(gcloud auth print-access-token)\n\nin your current shell session'",
    "test": "yarn test:unit",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "test:unit": "jest --maxWorkers=40%",
    "test:cov": "yarn test:unit --coverage",
    "format:fix": "prettier --write .",
    "extract": "ng xi18n --output-path=src/locale",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@angular/animations": "^16.2.2",
    "@angular/cdk": "^16.2.1",
    "@angular/common": "^16.2.2",
    "@angular/compiler": "^16.2.2",
    "@angular/core": "^16.2.2",
    "@angular/elements": "^16.2.2",
    "@angular/forms": "^16.2.2",
    "@angular/localize": "^16.2.2",
    "@angular/platform-browser": "^16.2.2",
    "@angular/platform-browser-dynamic": "^16.2.2",
    "@angular/router": "^16.2.2",
    "@apollo/client": "^3.8.1",
    "@dxp/ngx-core": "0.16.1",
    "@dynatrace/dtrum-api-types": "1.275.1",
    "@fundamental-ngx/core": "0.45.1",
    "@fundamental-ngx/platform": "0.45.1",
    "@fundamental-styles/common-css": "0.30.1",
    "@luigi-project/client": "2.5.1",
    "@luigi-project/client-support-angular": "2.5.1",
    "@ngrx/effects": "^16.2.0",
    "@ngrx/store": "^16.2.0",
    "@sap-theming/theming-base-content": "11.6.7",
    "apollo-angular": "^5.0.0",
    "deepmerge": "^4.3.1",
    "fundamental-styles": "0.30.1",
    "graphql": "^16.8.0",
    "graphql-ws": "^5.14.0",
    "rxjs": "7.8.1",
    "tslib": "2.6.2",
    "zone.js": "0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.0",
    "@angular-eslint/builder": "16.1.2",
    "@angular-eslint/eslint-plugin": "16.1.2",
    "@angular-eslint/eslint-plugin-template": "16.1.2",
    "@angular-eslint/schematics": "16.1.2",
    "@angular-eslint/template-parser": "16.1.2",
    "@angular/cli": "^16.2.0",
    "@angular/compiler-cli": "^16.2.2",
    "@luigi-project/testing-utilities": "2.5.1",
    "@types/jest": "29.5.4",
    "@types/node": "18.17.15",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-plugin-jest": "27.2.3",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "jest-mock-extended": "3.0.5",
    "jest-preset-angular": "13.1.1",
    "lint-staged": "14.0.1",
    "ng-mocks": "14.11.0",
    "prettier": "3.0.3",
    "typescript": "5.1.x"
  },
  "lint-staged": {
    "*.{ts,css,md,html,json,scss}": "prettier -w",
    "*.ts": "eslint --cache"
  },
  "packageManager": "yarn@3.6.3"
}

{
  "name": "pipeline-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=3"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "start": "ng serve",
    "build": "ng build --configuration production --localize --output-path=dist",
    "login": "gcloud auth login && echo 'You need to run:\n\n\texport GCP_REGISTRY_REFERENCE_TOKEN=$(gcloud auth print-access-token)\n\nin your current shell session'",
    "test": "yarn test:unit",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "test:unit": "jest --maxWorkers=40%",
    "test:cov": "yarn test:unit --coverage",
    "format:fix": "prettier --write .",
    "extract": "ng xi18n --output-path=src/locale",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@angular/animations": "^15.2.8",
    "@angular/cdk": "^15.2.8",
    "@angular/common": "^15.2.8",
    "@angular/compiler": "^15.2.8",
    "@angular/core": "^15.2.8",
    "@angular/elements": "^15.2.9",
    "@angular/forms": "^15.2.8",
    "@angular/localize": "^15.2.8",
    "@angular/platform-browser": "^15.2.8",
    "@angular/platform-browser-dynamic": "^15.2.8",
    "@angular/router": "^15.2.8",
    "@apollo/client": "^3.0.0",
    "@dxp/ngx-core": "0.16.1",
    "@dynatrace/dtrum-api-types": "1.263.3",
    "@fundamental-ngx/core": "0.39.2",
    "@fundamental-ngx/moment-adapter": "0.39.2",
    "@fundamental-ngx/platform": "0.39.2",
    "@fundamental-styles/common-css": "0.27.1",
    "@luigi-project/client": "2.2.1",
    "@luigi-project/client-support-angular": "2.2.1",
    "@ngrx/effects": "^15.0.0",
    "@ngrx/store": "^15.0.0",
    "@sap-theming/theming-base-content": "11.1.49",
    "apollo-angular": "^4.0.0",
    "deepmerge": "^4.2.2",
    "fundamental-styles": "0.27.1",
    "graphql": "^16.0.0",
    "moment": "^2.29.2",
    "rxjs": "7.8.1",
    "tslib": "2.6.0",
    "zone.js": "0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.8",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "^15.2.8",
    "@angular/compiler-cli": "^15.2.8",
    "@luigi-project/testing-utilities": "2.2.1",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.19",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.44.0",
    "eslint-plugin-jest": "27.2.2",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-mock-extended": "3.0.4",
    "jest-preset-angular": "13.1.1",
    "lint-staged": "13.2.3",
    "ng-mocks": "14.11.0",
    "prettier": "2.8.8",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.{ts,css,md,html,json,scss}": "prettier -w",
    "*.ts": "eslint --cache"
  },
  "packageManager": "yarn@3.6.1"
}

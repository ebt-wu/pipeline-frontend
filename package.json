{
  "name": "pipeline-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.18",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start:ui": "ng serve ui",
    "start:ui-local": "ng serve ui --configuration=local",
    "start:wc": "ng serve wc --single-bundle",
    "start:wc-local": "ng serve wc --single-bundle",
    "build:ci": "npm run test:cov && npm run build:ui && npm run build:wc && npm run lint",
    "build": "npm run build:ui && npm run build:wc",
    "build:ui": "ng build ui --configuration production --localize --output-path=dist --stats-json && tar -zcvf pipeline-frontend-ui.tar.gz dist/*",
    "build:wc": "ng build wc --single-bundle --output-hashing none --configuration production --localize --output-path=dist --stats-json && tar -zcvf pipeline-frontend-wc.tar.gz dist/*",
    "test": "npm run test:unit",
    "lint": "ng lint",
    "lint:ui": "ng lint ui",
    "lint:ui:fix": "ng lint ui --fix",
    "lint:wc": "ng lint wc",
    "lint:wc:fix": "ng lint wc --fix",
    "test:unit": "jest --maxWorkers=40%",
    "test:cov": "jest --coverage",
    "test:ui": "jest --testPathPattern=\"projects/ui/\"",
    "test:ui:cov": "jest --testPathPattern=\"projects/ui/\" --coverage",
    "test:wc": "jest --testPathPattern=\"projects/webcomponent/\"",
    "test:wc:cov": "jest --testPathPattern=\"projects/webcomponent/\" --coverage",
    "format": "prettier --write .",
    "format:ui": "prettier --write ./projects/ui",
    "format:wc": "prettier --write ./projects/webcomponent",
    "extract:ui": "ng xi18n --output-path=projects/ui/src/locale",
    "codegen": "graphql-codegen -r ts-node/register --config codegen.ts",
    "codegen:local": "API_URL=http://localhost:3000/query graphql-codegen -r ts-node/register --config codegen.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@angular/animations": "^19.2.12",
    "@angular/cdk": "^19.2.12",
    "@angular/common": "^19.2.12",
    "@angular/compiler": "^19.2.12",
    "@angular/core": "^19.2.12",
    "@angular/elements": "^19.2.12",
    "@angular/forms": "^19.2.12",
    "@angular/localize": "^19.2.12",
    "@angular/platform-browser": "^19.2.12",
    "@angular/platform-browser-dynamic": "^19.2.12",
    "@angular/router": "^19.2.12",
    "@apollo/client": "^3.13.8",
    "@dxp/ngx-core": "~19.0.5",
    "@fundamental-ngx/cdk": "~0.55.6",
    "@fundamental-ngx/core": "~0.55.6",
    "@fundamental-ngx/datetime-adapter": "~0.55.6",
    "@fundamental-ngx/i18n": "~0.55.6",
    "@fundamental-ngx/platform": "~0.55.6",
    "@fundamental-styles/common-css": "0.30.2",
    "@luigi-project/client": "2.21.3",
    "@luigi-project/client-support-angular": "2.21.3",
    "@luigi-project/testing-utilities": "2.21.3",
    "@sap-theming/theming-base-content": "11.29.3",
    "apollo-angular": "^10.0.3",
    "deep-equal": "2.2.3",
    "fundamental-styles": "^0.39.2",
    "graphql": "16.11.0",
    "graphql-sse": "2.5.4",
    "jwt-decode": "^4.0.0",
    "node-fetch": "3.3.2",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.13",
    "@angular-eslint/builder": "^19.4.0",
    "@angular-eslint/eslint-plugin": "^19.4.0",
    "@angular-eslint/eslint-plugin-template": "^19.4.0",
    "@angular-eslint/schematics": "^19.4.0",
    "@angular-eslint/template-parser": "^19.4.0",
    "@angular/build": "^19.2.13",
    "@angular/cli": "^19.2.13",
    "@angular/compiler-cli": "^19.2.12",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-apollo-angular": "4.0.0",
    "@graphql-codegen/typescript-operations": "4.6.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.3",
    "@typescript-eslint/eslint-plugin": "8.31.1",
    "@typescript-eslint/parser": "8.31.1",
    "angular-eslint": "19.5.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "~5.2.5",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-jasmine2": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-mock-extended": "3.0.7",
    "jest-preset-angular": "14.5.5",
    "lint-staged": "16.0.0",
    "lodash": "4.17.21",
    "ng-mocks": "14.13.5",
    "ng-packagr": "19.2.2",
    "ngx-build-plus": "19.0.0",
    "open": "^10.1.0",
    "openid-client": "6.4.2",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.29.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}

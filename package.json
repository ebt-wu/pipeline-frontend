{
  "name": "pipeline-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "start:ui": "ng serve ui",
    "start:ui-local": "ng serve ui --configuration=local",
    "start:wc": "ng serve wc --single-bundle",
    "start:wc-local": "ng serve wc --single-bundle",
    "build:ci": "npm run test:cov && npm run build:ui && npm run build:wc && npm run lint",
    "build": "npm run build:ui && npm run build:wc",
    "build:ui": "ng build ui --configuration production --localize --output-path=dist --stats-json && tar -zcvf pipeline-frontend-ui.tar.gz dist/*",
    "build:wc": "ng build wc --single-bundle --output-hashing none --configuration production --localize --output-path=dist --stats-json && tar -zcvf pipeline-frontend-wc.tar.gz dist/*",
    "test": "npm run test:unit",
    "lint": "ng lint",
    "lint:ui": "ng lint ui",
    "lint:ui:fix": "ng lint ui --fix",
    "lint:wc": "ng lint wc",
    "lint:wc:fix": "ng lint wc --fix",
    "test:unit": "jest --maxWorkers=40%",
    "test:cov": "jest --coverage",
    "test:ui": "jest --testPathPattern=\"projects/ui/\"",
    "test:ui:cov": "jest --testPathPattern=\"projects/ui/\" --coverage",
    "test:wc": "jest --testPathPattern=\"projects/webcomponent/\"",
    "test:wc:cov": "jest --testPathPattern=\"projects/webcomponent/\" --coverage",
    "format": "prettier --write .",
    "format:ui": "prettier --write ./projects/ui",
    "format:wc": "prettier --write ./projects/webcomponent",
    "extract:ui": "ng xi18n --output-path=projects/ui/src/locale",
    "codegen": "graphql-codegen -r ts-node/register --config codegen.ts",
    "codegen:local": "API_URL=http://localhost:3000/query graphql-codegen -r ts-node/register --config codegen.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@angular/animations": "18.2.13",
    "@angular/cdk": "18.2.13",
    "@angular/common": "18.2.13",
    "@angular/compiler": "18.2.13",
    "@angular/core": "18.2.13",
    "@angular/elements": "18.2.13",
    "@angular/forms": "18.2.13",
    "@angular/localize": "18.2.13",
    "@angular/platform-browser": "18.2.13",
    "@angular/platform-browser-dynamic": "18.2.13",
    "@angular/router": "18.2.13",
    "@apollo/client": "3.11.8",
    "@dxp/ngx-core": "^0.25.19",
    "@fundamental-ngx/cdk": "0.52.0",
    "@fundamental-ngx/core": "0.52.0",
    "@fundamental-ngx/i18n": "0.52.0",
    "@fundamental-ngx/moment-adapter": "0.52.0",
    "@fundamental-ngx/platform": "0.52.0",
    "@fundamental-styles/common-css": "0.30.2",
    "@luigi-project/client": "2.17.0",
    "@luigi-project/client-support-angular": "2.17.0",
    "@luigi-project/testing-utilities": "2.17.0",
    "@sap-theming/theming-base-content": "11.19.0",
    "apollo-angular": "7.2.0",
    "deep-equal": "2.2.3",
    "fundamental-styles": "0.37.7",
    "graphql": "16.9.0",
    "graphql-sse": "2.5.3",
    "jwt-decode": "^4.0.0",
    "node-fetch": "3.3.2",
    "rxjs": "7.8.1",
    "tslib": "2.7.0",
    "zone.js": "0.14.10"
  },
  "devDependencies": {
    "@angular-eslint/builder": "18.4.3",
    "@angular-eslint/eslint-plugin": "18.4.3",
    "@angular-eslint/eslint-plugin-template": "18.4.3",
    "@angular-eslint/schematics": "18.4.3",
    "@angular-eslint/template-parser": "18.4.3",
    "@angular/build": "18.2.12",
    "@angular/cli": "18.2.12",
    "@angular/compiler-cli": "18.2.13",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.0",
    "@graphql-codegen/typescript-apollo-angular": "4.0.0",
    "@graphql-codegen/typescript-operations": "4.3.1",
    "@types/jest": "29.5.13",
    "@types/node": "22.13.5",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "angular-eslint": "18.4.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "~5.2.3",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-jasmine2": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-mock-extended": "3.0.7",
    "jest-preset-angular": "14.2.4",
    "lint-staged": "15.4.3",
    "lodash": "4.17.21",
    "ng-mocks": "14.13.1",
    "ng-packagr": "18.2.1",
    "ngx-build-plus": "18.0.0",
    "openid-client": "6.1.7",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typescript": "5.4.2",
    "typescript-eslint": "^8.26.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}

{
  "name": "pipeline-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.1"
  },
  "scripts": {
    "start:ui": "ng serve ui",
    "start:ui-local": "ng serve ui --configuration=local",
    "start:wc": "ng serve wc --single-bundle",
    "start:wc-local": "ng serve wc --single-bundle",
    "build:ci": "npm run test:cov && npm run build:ui && npm run build:wc && npm run lint",
    "build": "npm run build:ui && npm run build:wc",
    "build:ui": "ng build ui --configuration production --localize --output-path=dist --stats-json && tar -zcvf pipeline-frontend-ui.tar.gz dist/*",
    "build:wc": "ng build wc --single-bundle --output-hashing none --configuration production --localize --output-path=dist --stats-json && tar -zcvf pipeline-frontend-wc.tar.gz dist/*",
    "test": "npm run test:unit",
    "lint": "ng lint",
    "lint:ui": "ng lint ui",
    "lint:ui:fix": "ng lint ui --fix",
    "lint:wc": "ng lint wc",
    "lint:wc:fix": "ng lint wc --fix",
    "test:unit": "jest --maxWorkers=40%",
    "test:cov": "npm run test:unit -- --coverage",
    "test:ui": "jest --testPathPattern=\"projects/ui/\"",
    "test:wc": "jest --testPathPattern=\"projects/webcomponent/\"",
    "format": "prettier --write .",
    "format:ui": "prettier --write ./projects/ui",
    "format:wc": "prettier --write ./projects/webcomponent",
    "extract:ui": "ng xi18n --output-path=projects/ui/src/locale",
    "codegen": "graphql-codegen -r ts-node/register --config codegen.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@angular/animations": "17.3.11",
    "@angular/cdk": "17.3.10",
    "@angular/common": "17.3.11",
    "@angular/compiler": "17.3.11",
    "@angular/core": "17.3.11",
    "@angular/elements": "17.3.11",
    "@angular/forms": "17.3.11",
    "@angular/localize": "17.3.11",
    "@angular/platform-browser": "17.3.11",
    "@angular/platform-browser-dynamic": "17.3.11",
    "@angular/router": "17.3.11",
    "@apollo/client": "3.11.5",
    "@dxp/ngx-core": "0.21.1",
    "@fundamental-ngx/cdk": "0.50.0",
    "@fundamental-ngx/core": "0.50.0",
    "@fundamental-ngx/i18n": "0.50.0",
    "@fundamental-ngx/moment-adapter": "0.50.0",
    "@fundamental-ngx/platform": "0.50.0",
    "@fundamental-styles/common-css": "0.30.2",
    "@luigi-project/client": "2.14.1",
    "@luigi-project/client-support-angular": "2.14.1",
    "@luigi-project/testing-utilities": "2.14.1",
    "@sap-theming/theming-base-content": "11.16.1",
    "apollo-angular": "7.0.2",
    "deep-equal": "2.2.3",
    "fundamental-styles": "0.37.0",
    "graphql": "16.9.0",
    "graphql-sse": "2.5.3",
    "node-fetch": "3.3.2",
    "rxjs": "7.8.1",
    "tslib": "2.6.3",
    "zone.js": "0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.8",
    "@angular-eslint/builder": "17.5.2",
    "@angular-eslint/eslint-plugin": "17.5.2",
    "@angular-eslint/eslint-plugin-template": "17.5.2",
    "@angular-eslint/schematics": "17.5.2",
    "@angular-eslint/template-parser": "17.5.2",
    "@angular/cli": "17.3.8",
    "@angular/compiler-cli": "17.3.11",
    "@dxp/eslint-config-angular": "2.0.7",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.9",
    "@graphql-codegen/typescript-apollo-angular": "4.0.0",
    "@graphql-codegen/typescript-operations": "4.2.3",
    "@types/jest": "29.5.12",
    "@types/node": "20.16.5",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.6.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unused-imports": "3.2.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-jasmine2": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-mock-extended": "3.0.7",
    "jest-preset-angular": "14.1.1",
    "lint-staged": "15.2.7",
    "lodash": "4.17.21",
    "ng-mocks": "14.13.0",
    "ng-packagr": "17.3.0",
    "ngx-build-plus": "17.0.0",
    "openid-client": "5.6.5",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}

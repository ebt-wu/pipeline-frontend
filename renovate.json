{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Automatically merge non-major updates",
      "matchUpdateTypes": ["minor", "digest", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@luigi-project/*"],
      "groupName": "luigi"
    },
  ]
}
